<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_karma_ticket_list" model="ir.ui.view"> <field name="name">karma.helpdesk.ticket.list</field> <field name="model">karma_helpdesk_ticket</field>
    <field name="arch" type="xml">
        <list decoration-danger="gravedad == 'alta'" decoration-info="state == 'abierto'" decoration-success="state == 'resuelto'">
            <field name="name"/>
            <field name="user_id"/>
            <field name="tecnico_id"/>
            <field name="gravedad" widget="badge" decoration-danger="gravedad == 'alta'" decoration-warning="gravedad == 'media'"/>
            <field name="state" widget="badge" decoration-success="state == 'resuelto'"/>
        </list>
    </field>
    </record>

    <record id="view_karma_ticket_kanban" model="ir.ui.view">
        <field name="name">karma.helpdesk.ticket.kanban</field>
        <field name="model">karma_helpdesk_ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" quick_create="false">
                <field name="gravedad"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow-sm border-left-4 #{record.gravedad.raw_value == 'alta' ? 'border-danger' : (record.gravedad.raw_value == 'media' ? 'border-warning' : 'border-info')}">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="user_id"/></div>
                                <div class="mt-2">
                                    <field name="tecnico_id" widget="many2one_avatar_user"/>
                                    <span class="float-right">
                                        <field name="gravedad" widget="label_selection" options="{'classes': {'baja': 'info', 'media': 'warning', 'alta': 'danger'}}"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_karma_ticket_form" model="ir.ui.view">
        <field name="name">karma.helpdesk.ticket.form</field>
        <field name="model">karma_helpdesk_ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_resolver" string="Resolver e incrementar Karma" 
                        type="object" class="oe_highlight" 
                        invisible="state == 'resuelto'"/>
                    <field name="state" widget="statusbar" statusbar_visible="abierto,en_progreso,resuelto"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Título de la incidencia"/>
                        <h1><field name="name" placeholder="Ej: No funciona el acceso a la VPN"/></h1>
                    </div>
                    <group>
                        <group string="Información del Ticket">
                            <field name="user_id"/>
                            <field name="tecnico_id"/>
                        </group>
                        <group string="Clasificación">
                            <field name="gravedad"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción del problema">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_karma_ticket_graph" model="ir.ui.view">
        <field name="name">karma.helpdesk.ticket.graph</field>
        <field name="model">karma_helpdesk_ticket</field>
        <field name="arch" type="xml">
            <graph string="Rendimiento por Técnico" type="bar">
                <field name="tecnico_id" type="row"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <record id="action_karma_ticket" model="ir.actions.act_window">
        <field name="name">Gestión de Incidencias</field>
        <field name="res_model">karma_helpdesk_ticket</field>
        <field name="view_mode">list,kanban,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">¡Crea el primer ticket y empieza el juego!</p>
        </field>
    </record>

    <menuitem id="menu_karma_root" name="Karma HelpDesk" sequence="10"/>
    <menuitem id="menu_karma_tickets" name="Tickets" parent="menu_karma_root" action="action_karma_ticket" sequence="10"/>

</odoo>