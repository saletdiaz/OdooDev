<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="tareas_kanban_view" model="ir.ui.view">
        <field name="name">project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="stage_id"/>
                <field name="name"/>
                <field name="user_ids"/>
                <field name="date_deadline"/>
                <field name="project_id"/>
                <field name="tag_ids"/>
                
                <!-- Plantilla QWeb -->
                <!-- La pÃ¡gina oficial: https://www.odoo.com/documentation/18.0/es/developer/reference/frontend/qweb.html -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card shadow-sm p-3 mb-2 bg-white rounded">
                            <!-- Encabezado con el Proyecto y Etapa -->
                            <div class="d-flex justify-content-between align-items-center">
                                <strong class="text-primary">
                                    <t t-esc="record.project_id.value"/>
                                </strong>
                                <span class="badge bg-secondary" t-esc="record.stage_id.value"/>
                            </div>

                            <!-- Nombre de la Tarea -->
                            <h5 class="mt-2 text-dark">
                                <t t-esc="record.name.value"/>
                            </h5>

                            <!-- InformaciÃ³n de Usuario y Fecha -->
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span>
                                    <i class="fa fa-user text-muted m-1"/> 
                                    <t t-if="record.user_ids.value">
                                        <t t-esc="record.user_ids.value"/>
                                    </t>
                                </span>
                                <span t-if="record.date_deadline.value">
                                    <i class="fa fa-calendar text-danger m-1"/> 
                                    <t t-esc="record.date_deadline.value"/>
                                </span>
                            </div>

                            <!-- Etiquetas -->
                            <div class="mt-2">
                                <t t-foreach="record.tag_ids.raw_value" t-as="tag">
                                    <span class="badge" style="background-color: #6c757d; color: white; margin-right: 5px;">
                                        <t t-esc="tag"/>
                                    </span>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='action_tareas_kanban' model='ir.actions.act_window'>
        <field name="name">Mis tareas (Kanban)</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'kanban_view_ref': 'EJ03-ListaTareasKanban.tareas_kanban_view'}</field>
    </record>

    <!-- Definimos los "Menu Item"-->
    <menuitem id="menu_custom_top_level" name="Mis tareas (Kanban)" web_icon="Lista Tareas (Kanban),static/description/icon.png"/>
    <menuitem id="menu_tareas_kanban" parent="menu_custom_top_level" action="action_tareas_kanban" sequence="10" />
</odoo>
